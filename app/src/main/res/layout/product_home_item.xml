<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/item_home_margin"
    android:background="@drawable/item_home_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/item_home_padding">

    <ImageView
        android:id="@+id/iv_home_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_home_image_height"
        android:layout_margin="@dimen/item_home_image_margin"
        android:background="@color/imageViewBG"
        android:minHeight="@dimen/item_home_image_height"
        android:scaleType="fitXY"/>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/iv_home_item_image"/>


    <LinearLayout
        android:id="@+id/ll_home_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider"
        android:orientation="vertical"
        android:background="#f8f8f8"
        android:paddingStart="@dimen/item_home_paddingStartEnd"
        android:paddingTop="@dimen/item_home_paddingTopBottom"
        android:paddingEnd="@dimen/item_home_paddingStartEnd"
        android:paddingBottom="@dimen/item_home_paddingTopBottom">

        <com.rafalropel.ecommerceshop.utils.TextViewBold
            android:id="@+id/tv_home_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/PrimaryText"
            android:textSize="@dimen/item_home_textSize"
            tools:text="Nazwa"/>

        <com.rafalropel.ecommerceshop.utils.TextViewBold
            android:id="@+id/tv_home_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/PrimaryText"
            android:textSize="@dimen/item_home_textSize"
            tools:text="100 zÅ‚"/>

    </LinearLayout>

</RelativeLayout>